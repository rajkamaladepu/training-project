<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
    xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="About Properties"
    extraClientlibs="[training.mfminmax,training.mfaltvalidator]"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <feature
                jcr:primaryType="nt:unstructured"
                jcr:title="About"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                        	<title
                                 jcr:primaryType="nt:unstructured"
                                 sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                 fieldLabel="Title"
                                 name="./title"
                                 required="{Boolean}true" />
                        	<textarea
                                 jcr:primaryType="nt:unstructured"
                                 sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                 fieldLabel="Longer text"
                                 name="./textarea"
                                 required="{Boolean}true" />
                              <imagePath
                                 jcr:primaryType="nt:unstructured"
                                 sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                 fieldLabel="Image"
                                 fieldDescription="600 x 227 (2 paragraphs)
                                 392 x 227 (3 paragraphs)
                                 286 x 164 (4 paragraphs) "
                                 name="./imagePath"
                                 required="{Boolean}true" 
                                 rootPath="/content/dam/mycity" />
                              <button
                                  jcr:primaryType="nt:unstructured"
                                  sling:resourceType="core/wcm/components/form/button/v2/button"
                                  fieldLabel="Button"
                                  name="./button"
                                  required="{Boolean}true" />                                 
                        </items>
                    </column>
                </items>
            </feature>
        </items>
    </content>
</jcr:root>